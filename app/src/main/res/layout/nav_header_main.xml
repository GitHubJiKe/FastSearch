<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/head_sdv"
        android:layout_width="@dimen/head_width"
        android:layout_height="@dimen/head_height"
        android:layout_margin="@dimen/login_btn_radius"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="0"
        fresco:placeholderImage="@mipmap/ic_timer_auto_white_48dp"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@color/white"
        fresco:roundingBorderWidth="1dp" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_sdv"
        android:layout_marginBottom="@dimen/login_btn_radius"
        android:layout_marginLeft="@dimen/fab_margin"
        android:text="@string/user_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:layout_marginBottom="@dimen/login_btn_radius"
        android:layout_marginLeft="@dimen/fab_margin"
        android:text="@string/email" />

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="@dimen/head_btn_width"
        android:layout_height="@dimen/head_btn_width"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/fab_margin"
        android:background="@mipmap/ic_edit_white_48dp" />

</RelativeLayout>
