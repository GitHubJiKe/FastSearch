<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_text_height</item>
        <item name="android:layout_margin">@dimen/login_text_margin</item>
    </style>

    <style name="SearchEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/login_text_height</item>
        <item name="android:layout_marginLeft">@dimen/login_text_margin</item>
        <item name="android:layout_marginTop">@dimen/search_margin</item>
        <item name="android:layout_marginBottom">@dimen/search_margin</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_btn_height</item>
        <item name="android:layout_margin">@dimen/login_text_margin</item>
        <item name="android:background">@drawable/login_btn_selector</item>
    </style>

    <style name="LoginButton_" parent="LoginButton">
        <item name="android:enabled">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
    </style>

    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">@color/white</item>
        <item name="floatingSearch_viewTextColor">@android:color/black</item>
        <item name="floatingSearch_leftActionColor">@android:color/black</item>
    </style>
</resources>
